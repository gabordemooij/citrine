#Linux
>> OS := Program os: (Command uname -s), trim.

>> Slurp := Object new.
Slurp on: ['new'] do: {
	own str := [''].
}.
Slurp on: ['respond:'] do: { :blah
		(own str ≠ ['']) true: {
			own str append: [' '].
		}.
		own str append: blah.
}.
Slurp on: ['respond:and:'] do: { :blah :blahah
		(own str ≠ ['']) true: {
			own str append: [' '].
		}.
		(blah length > 1) true: {
			own str append: (blah from: 0 length: (blah length - 1)).
		}, else: {
			own str append: blah.
		}.
		own str append: [' '].
		own str append: blahah.
}.
Slurp on: ['obtain'] do: {
	>> buffer := own str.
	own str := ['']. <- buffer.
}.
>> large text := [''].
{
	large text append: ['hello'].
} × 1000.


Out write: (
	Program os: (
		Slurp new
			echo: large text,
			| (['./ctren ../../../tests/assets/stdin_test.ctr'] OS: OS)
		) obtain
).

