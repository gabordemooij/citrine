myFile := File new: File tempDir + '/lock'.

myFile exists ifTrue: {
	myFile delete.
}.

myFile write: 'lock'.

☞ isLocked   := False.
☞ isUnlocked := False.

{ isLocked := myFile lock. ↲ isLocked. } whileFalse: { ⏰ wait: 1. }.
✎ write: isLocked, brk.

