			name:   Path bin OS ctrTAG,
			target: Path tests tmp runnerTAG,
			output: Path tests tmp outTAG,
			log:    Path tests tmp logTAG,
			OS:    OS,
			TAG:   tag.
		actions append: action.
		actions
