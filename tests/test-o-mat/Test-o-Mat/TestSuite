☞ Tests ≔ Object new.

Tests on: ‘path:’ do: { :path
	⚿ path ≔ path.
}.

Tests on: ‘init’ do: {
	⚿ path ≔ ‘’.
	⚿ flags ≔ Map new.
	⚿ counter ≔ 0.
}.

Tests on: ‘new’ do: {
	☞ tests ≔ ⛏ new.
	tests init.
	↲ tests.
}.

Tests on: ‘run’ do: {
	☞ test ≔ Nil.
	{ ⛏ process: test. }
	while:
	{ test ≔ ⛏ next. ↲ test. }.
	Program end.
}.

Tests on: ‘action’ do: {
	☞ action ≔ Action new.
	action base folder: ⚿ path.
	↲ action.
}.

Tests on: ‘actions’ do: {
	☞ actions ≔ Actions new.
	actions base folder: ⚿ path.
	↲ actions.
}.

Tests on: ‘record:’ do: { :record
	⚿ record ≔ record boolean.
}.

Tests on: ‘record’ do: {
	↲ ⚿ record boolean.
}.
