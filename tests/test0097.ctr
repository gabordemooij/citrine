'SINGLE_LANGUAGE'.
String on: 'html' do: {
	↲ (
		⛏
		replace: '&' with: '&amp;',
		replace: '<' with: '&lt;',
		replace: '>' with: '&gt;',
		replace: '"' with: '&quot;'
	).
}.

☞ HtmlBrush := Object new.

HtmlBrush on: 'respond:' do: { :tag
	✎ write: ('<tag>↵' tag: tag ).
}.

HtmlBrush on: 'respond:and:' do: { :tag :content
	tag := ( tag from: 0 length: (tag length - 1) ).
	✎ write: ('<tag content>↵' tag: tag, content: content).
}.

HtmlBrush on: 'content:' do: { :text
	✎ write: text html, stop.
}.

HtmlBrush on: 'attr:value:' do: { :attr :value
	↲ 'attr="value"' attr: attr, value: value.
}.

☞ h := HtmlBrush new.


h html
	body
		h1
			content: 'hello world',
		/h1
		span:
			(h attr: 'class' value: 'bold'),
		/span
	/body
/html.
		
