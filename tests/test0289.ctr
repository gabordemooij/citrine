‘SINGLE_LANGUAGE’.
☞ Slurp := Object new.
Slurp on: ‘new’ do: {
	⚿ str := ‘’.
}.
Slurp on: ‘respond:’ do: { :blah
		(⚿ str ≠ ‘’) true: {
			⚿ str append: ‘ ’.
		}.
		⚿ str append: blah.
}.
Slurp on: ‘respond:and:’ do: { :blah :blahah
		(⚿ str ≠ ‘’) true: {
			⚿ str append: ‘ ’.
		}.
		(blah length > 1) true: {
			⚿ str append: (blah from: 0 length: (blah length - 1)).
		}, else: {
			⚿ str append: blah.
		}.
		⚿ str append: ‘ ’.
		⚿ str append: blahah.
}.
Slurp on: ‘obtain’ do: {
	☞ buffer := ⚿ str.
	⚿ str := ‘’.
	↲ buffer.
}.
☞ large text := ‘’.
{
	large text append: ‘hello’.
} * 1000.

✎ write: (
	Program shell: (
		Slurp new
			echo: large text,
			| ‘./bin/Linux/ctrus tests/assets/stdin_test.ctr’
		) obtain
).

