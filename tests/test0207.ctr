☞ check random numbers := { :min :max

	min := min round.
	max := max round.
	(min > max) true: {
		☞ t := max.
		max := min.
		min := t.
	}.
	
	☞ x := Number between: min and: max.
	
	☞ between boundaries? := (
		(x round ≥ min round) & (x round ≤ max round)
	).
	
	between boundaries? false: {
		✎ write: (
			'WRONG: number !↵' number: x
		).
		Program exit.
	}.
}.


