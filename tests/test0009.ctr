Greeter := Object new.
Greeter on: 'make' do: {\
	greeter := Object new.
	greeter on: 'name:' do: { name |
		Pen write: 'setting a name'.
		my myName := name.
	}.
	greeter on: 'performGreeting' do: {\
		Pen write: 'Hello'.
		Pen write: my myName.
	}.
	greeter on: 'greet' do: {\
		me performGreeting.
	}.
	^greeter.
}.
greeter := Greeter make.
greeter name: 'sunshine!'.
greeter greet.
