☞ Greeter := Object new.
Greeter on: 'make' do: {
	☞ greeter := Object new.
	greeter on: 'name:' do: { :name
		✎ write: 'setting a name'.
		⚿ myName := name.
	}.
	greeter on: 'performGreeting' do: {
		✎ write: 'Hello'.
		✎ write: ⚿ myName.
	}.
	greeter on: 'greet' do: {
		⛏ performGreeting.
	}.
	↲greeter.
}.
☞ greeter := Greeter make.
greeter name: 'sunshine!'.
greeter greet.
