>> x := None.
{

	x := ['hello'] 
	replace:
		(['hel'] + 
			(['l<x>'] <x>:
				(['==o'] character: 2)
			)
		)
	with: (
		(['...hal'] + ['lo']) 
			upper 
			lowecase 
			upper 
			offset: -1 + ( 
				11 - 12 + (
					(
						(
							(
								List ← 0 ; 1 ; 4; 9 ; (List ← 0 ; 3; 1) ; 4
							) penultimate
						) ? 1
					) + 
					((List ← ['X'] ; ['Y'] ; ['Z']) fixture: 2) 
					count
				)
			)
	).

} × 10.
