['SINGLE_LANGUAGE'].

List on: ['column:'] do: { :column
	>> result := List new.
	self each: { :index :row
		row each: { :index :cell
			(index = column) true: { result append: cell. }.
		}.
	}. <- result.
}.


>> a := List ←
	(List ← 1 ; 2 ; 3) ;
	(List ← 4 ; 5 ; 6) ;
	(List ← 7 ; 8 ; 9).

>> b := a column: 1.
Out write: b, stop.

b := a column: 20.
Out write: b, stop.

b := a column: -100.
Out write: b, stop.
